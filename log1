Perf
| where ObjectName == "LogicalDisk"
| where CounterName == "% Free Space"
| where InstanceName contains ":"  // Ensures we're checking valid disk drives
| summarize avg(CounterValue) by Computer, InstanceName, bin(TimeGenerated, 1h)
| where avg_CounterValue < 10  // Alert if free space is less than 10%
| project TimeGenerated, Computer, InstanceName, avg_CounterValue
